# Template file for 'abseil-cpp'
pkgname=abseil-cpp
version=20200923.3
revision=1
wrksrc=abseil-cpp-${version}
build_style=cmake
configure_args="-DBUILD_SHARED_LIBS=ON"
short_desc="Google's fundamental C++ libraries"
depends="abseil-cpp-algorithm abseil-cpp-base abseil-cpp-container abseil-cpp-debugging
 abseil-cpp-flags abseil-cpp-functional abseil-cpp-hash abseil-cpp-memory
 abseil-cpp-meta abseil-cpp-numeric abseil-cpp-random abseil-cpp-status abseil-cpp-strings
 abseil-cpp-synchronization abseil-cpp-time abseil-cpp-types abseil-cpp-utility"
maintainer="Artur Sinila <opensource@logarithmus.dev>"
license="Apache-2.0"
homepage="https://abseil.io"
changelog="https://github.com/abseil/abseil-cpp/releases/latest"
distfiles="https://github.com/abseil/abseil-cpp/archive/${version}.tar.gz"
checksum=ebe2ad1480d27383e4bf4211e2ca2ef312d5e6a09eba869fd2e8a5c5d553ded2

abseil-cpp-devel() {
	short_desc+=" - development files"
	depends="abseil-cpp-algorithm-devel abseil-cpp-base-devel abseil-cpp-container-devel
	 abseil-cpp-debugging-devel abseil-cpp-flags-devel abseil-cpp-functional-devel
	 abseil-cpp-hash-devel abseil-cpp-memory-devel abseil-cpp-meta-devel
	 abseil-cpp-numeric-devel abseil-cpp-random-devel abseil-cpp-status-devel
	 abseil-cpp-strings-devel abseil-cpp-synchronization-devel abseil-cpp-time-devel
	 abseil-cpp-types-devel abseil-cpp-utility-devel"
}

abseil-cpp-algorithm_package() {
	short_desc+=" (algorithm)"
	pkg_install() {
		mkdir -p $PKGDESTDIR/usr/lib
		mv "${build_wrksrc}/absl/algorithm/*.so" $PKGDESTDIR/usr/lib/
	}
}

abseil-cpp-algorithm-devel_package() {
	short_desc+=" (algorithm) - development files"
	depends="abseil-cpp-algorithm>=${version}_${revision}"
	pkg_install() {
		vmove "usr/include/absl/algorithm"
	}
}

